#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<Manager>:
    transition: FadeTransition()
    Home:
    TwoPlayers:
    OnePlayer:


<Block>
    canvas.before:
        Color:
            rgba: 1, 1, 0.4, 1
        Rectangle:
            size: self.size
            pos: self.pos
    font_size: 40
    played: -1

<Home>
    name: 'home'
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: root.size
            pos: root.pos
    Label:
        size_hint: None, None
        text: 'Tic Tac Toe!'
        color: 0, 0, 0, 1
        font_size: 60
        size: self.texture_size
        pos: ((root.width / 2) - (self.width/ 2)), ((root.height / 2) - (self.height / 2)) + 100

    GridLayout:
        size_hint: None, None
        size: root.width * 0.73, 80
        pos: ((root.width / 2) - (self.width/ 2)), 10
        cols: 3
        Button:
            text: 'Two Players'
            font_size: 30
            color: 0, 1, 0.3, 1
            on_release: app.root.current = 'twoplayers'
        Button:
            text: 'One Player'
            font_size: 30
            color: 0, 1, 0.3, 1
            on_release: app.root.current = 'oneplayer'
        Button:
            text: 'Exit'
            font_size: 30
            color: 1, 0, 0, 1
            on_release: quit()

